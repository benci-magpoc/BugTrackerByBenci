<div class="auth-wrapper d-flex no-block justify-content-center align-items-center" style="background:url(/assets/images/background/login-register.jpg) no-repeat center center; background-size: cover;">
    <div class="auth-box p-4 bg-white rounded">
        <div id="loginform">
            <div class="logo text-center mb-4">
                <span><img src="/img/logoBugTracker.png"/><img src="/img/textLogoBugTracker.png"/></span>
            </div>
            <!-- Form -->
            <div class="row">
                <div class="col-12">
                    <form class="form-horizontal mt-3 form-material" id="account" method="post">
                        <div class="form-group mb-3">
                            <div class="">
                                <input asp-for="Input.Email" id="floatingInput" class="form-control" autocomplete="username" aria-required="true" type="email" placeholder="Email">
                            </div>
                        </div>
                        <div class="form-group mb-4">
                            <div class="">
                                <input asp-for="Input.Password" id="floatingPassword" class="form-control" autocomplete="current-password" aria-required="true" type="password" class="form-control" placeholder="Password">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="d-flex">
                                <div class="checkbox checkbox-info pt-0">
                                    <div class="checkbox checkbox-info pt-0">
                                        <input id="checkbox-signup" asp-for="Input.RememberMe" type="checkbox" value="remember-me" class="material-inputs chk-col-indigo">
                                        <label for="checkbox-signup"> Remember me </label>
                                    </div>
                                </div>
                                <div class="ms-auto">
                                    <a id="forgot-password" asp-page="./ForgotPassword" class="link font-weight-medium"><i class="fa fa-lock me-1"></i>Forgot pwd?</a>
                                </div>
                            </div>
                        </div>
                        <div class="form-group text-center mt-4 mb-3">
                            <div class="col-xs-12">
                                <button id="login-submit" asp-route-returnUrl="/Home/Dashboard" class="btn btn-info d-block w-100 waves-effect waves-light" type="submit">Log In</button>
                            </div>
                        </div>
                        <div class="row">
                            <p>
                                <button class="btn btn-info d-block w-100 waves-effect waves-light dropdown-toggle" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                                    Login as on of Demo Users
                                </button>
                            </p>
                            <div class="collapse" id="collapseExample">
                                <div class="card card-body">
                                    <button asp-route-returnUrl="/Home/Dashboard" class="btn btn-info d-block w-100 waves-effect waves-light my-2" data-toggle="tooltip" title="Demo Admin" type="submit"
                                            name="demoEmail" value="DemoAdminEmail">Demo Admin</button>
                                    <button asp-route-returnUrl="/Home/Dashboard" class="btn btn-info d-block w-100 waves-effect waves-light my-2" data-toggle="tooltip" title="Demo Project Manager"
                                            type="submit" name="demoEmail" value="DemoPMEmail">Demo Project Manager</button>
                                    <button asp-route-returnUrl="/Home/Dashboard" class="btn btn-info d-block w-100 waves-effect waves-light my-2" data-toggle="tooltip" title="Demo Developer"
                                            type="submit" name="demoEmail" value="DemoDevEmail">Demo Developer</button>
                                    <button asp-route-returnUrl="/Home/Dashboard" class="btn btn-info d-block w-100 waves-effect waves-light my-2" data-toggle="tooltip" title="Demo Submitter"
                                            type="submit" name="demoEmail" value="DemoSubEmail">Demo Submitter</button>
                                </div>
                            </div>
                        </div>
                        <div class="form-group mb-0 mt-4">
                            <div class="col-sm-12 justify-content-center d-flex">
                                <p>Need to register your company? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-info font-weight-medium ms-1">Register</a></p>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div id="recoverform">
            <div class="logo">
                <h3 class="font-weight-medium mb-3">Recover Password</h3>
                <span class="text-muted">Enter your Email and instructions will be sent to you!</span>
            </div>
            <div class="row mt-3 form-material">
                <!-- Form -->
                <form class="col-12" action="index.html">
                    <!-- email -->
                    <div class="form-group row">
                        <div class="col-12">
                            <input class="form-control" type="email" required="" placeholder="Username">
                        </div>
                    </div>
                    <!-- pwd -->
                    <div class="row mt-3">
                        <div class="col-12">
                            <button class="btn d-block w-100 btn-primary text-uppercase" type="submit" name="action">Reset</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
