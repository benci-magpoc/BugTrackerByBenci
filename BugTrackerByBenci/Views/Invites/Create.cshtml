@model BugTrackerByBenci.Models.Invite

@{
    ViewData["Title"] = "Invite Member";
}
<div class="container">
    <div class="row">
        <div class="col col-md-8">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="ProjectId" class="control-label">Project</label>
                            <select asp-for="ProjectId" class="form-control" asp-items="ViewBag.ProjectId"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="InviteeEmail" class="control-label"></label>
                            <input asp-for="InviteeEmail" class="form-control" />
                            <span asp-validation-for="InviteeEmail" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="InviteeFirstName" class="control-label"></label>
                            <input asp-for="InviteeFirstName" class="form-control" />
                            <span asp-validation-for="InviteeFirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="InviteeLastName" class="control-label"></label>
                            <input asp-for="InviteeLastName" class="form-control" />
                            <span asp-validation-for="InviteeLastName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Message" class="control-label"></label>
                            <input asp-for="Message" class="form-control" />
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3 text-center">
                            <a asp-action="Dashboard" asp-controller="Home" class="btn btn-outline-secondary m-2">Cancel</a>
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
