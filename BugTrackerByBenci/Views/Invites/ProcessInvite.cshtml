@model BugTrackerByBenci.Models.Invite

@{
    ViewData["Title"] = "Process Invite";
}
<div class="container">
    <div class="row">
        <div class="col col-md-8">
            <div class="card">
                <div class="card-body">

                    <div class="card-title mt-3 text-center">
                        <h2 class="title font-weight-bold m-0">Welcome @Model.InviteeFirstName @Model.InviteeLastName!</h2>
                    </div>
                    <div class="header">
                        <h3>
                            <span class="clearfix title">
                                <h3 class="number">Please join us with project:</h3>
                                <span class="fw-bold">@Model.Project!.Name</span>
                            </span>
                        </h3>
                        <h5><span>Company Name: @Model.Company!.Name </span></h5>
                    </div>
                        <p>
                            @Model.Invitor!.FullName has invited you to collaborate on the @Model.Project!.Name project.
                            <br /> Click the "JOIN" button below to register with the company and begin entering tickets.
                        </p>
                        <a class="btn btn-primary btn-lg btn-block" asp-area="Identity" asp-page="/Account/RegisterByInvite" asp-route-id="@Model.Id" asp-route-companyId="@Model.CompanyId" return><i class="bi bi-box-arrow-in-right"></i> <span>JOIN</span></a>
                </div>
            </div>
        </div>
    </div>
</div>